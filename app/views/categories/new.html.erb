<%= render 'shared/form_error', obj: @category %> 

<%= render 'shared/content_title', title: "Create New Category" %>
<div class="well">
	<%= form_for @category do |f| %>
		<div class="control-group">
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>
		<%= f.submit "Create Category" %>
	<% end %>
</div>

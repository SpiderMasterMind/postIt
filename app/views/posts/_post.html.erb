<div class="row">
	<div class="text-center span0 well">
		<% if logged_in? %>
			<%= link_to vote_post_path(post, vote: true), method: :post, class: "vote_arrow", remote: true do %>
				<i class="icon-arrow-up"></i>
			<% end %>
		<% end %>
		<br />
		<%= post.total_votes %>			
		<br />			
		<% if logged_in? %>			
			<%= link_to vote_post_path(post, vote: false), method: :post, class: "vote_arrow" do %>
				<i class="icon-arrow-down"></i>
			<% end %>
		<% end %>
	</div>
	<div class="span8 well">
	 <%= render post.categories %> 
		<h4><%= link_to post.title, fix_url(post.url) %></h4>
		<p><%= post.description %></p>
	<p>
		<span class='quiet'>posted by</span> <%= post.creator.username %>
		<small>at <%= format_datetime(post.created_at) if !post.created_at.nil? %></small>
	</p>
	<small>
		<span>
			<%= link_to("#{post.comments.size} comments", post_path(post))%>
		</span>
	</small>
	</div>
</div>
